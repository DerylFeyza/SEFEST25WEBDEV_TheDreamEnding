datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum RentalStatus {
  PENDING
  CONFIRMED
  ONGOING
  COMPLETED
  CANCELLED
}


model User {
  id                  String   @id @default(uuid())
  name                String
  email               String   @unique
  password            String?
  profile_picture_url String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  items               Item[]
  Rental              Rental[]
  Review              Review[]
}

model Item {
  id              String   @id @default(uuid())
  name            String
  rent_price      Int
  pickup_location String
  category        String
  description     String?
  condition       String?
  image_url       String
  available       Boolean  @default(true)
  item_amount     Int      @default(1)
  dailyCarbonSaving   Float
  dailyWasteReduction Float
  owner_id        String
  is_deleted      Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  rentals         Rental[]
  reviews         Review[]
  owner           User     @relation(fields: [owner_id], references: [id])
}

model Rental {
  id            String       @id @default(uuid())
  item_id       String
  user_id       String
  start_date    DateTime
  finished_date DateTime
  paid_amount   Int
  rent_amount   Int
  status        RentalStatus @default(PENDING)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  item          Item         @relation(fields: [item_id], references: [id])
  User          User         @relation(fields: [user_id], references: [id])
  sustainabilityImpact  SustainabilityImpact?
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  user_id   String
  item_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [user_id], references: [id])
  item      Item     @relation(fields: [item_id], references: [id])
}

model SustainabilityImpact {
  id             String   @id @default(uuid())
  rental_id       String   @unique
  carbon_savings  Float
  waste_reduction Float
  createdAt      DateTime @default(now())
  rental         Rental   @relation(fields: [rental_id], references: [id])
}